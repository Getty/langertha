#!/usr/bin/env perl
# PODNAME: langertha_chat_openai
# ABSTRACT: Chat with OpenAI

use strict;
use warnings;
use Langertha::Engine::OpenAI;
use Carp qw( croak );
use Time::HiRes qw( time );

binmode(STDOUT, ":utf8");
binmode(STDERR, ":utf8");

my $start = time;
my $openai = Langertha::Engine::OpenAI->new(
  $ENV{OPENAI_MODEL} ? ( model => $ENV{OPENAI_MODEL} ) : (),
);
print $openai->simple_chat(join(" ",@ARGV));
my $end = time;
printf("\n -- %.3f seconds\n", ($end - $start)) unless $ENV{LANGERTHA_NO_TIME};

=encoding utf8

=head1 SYNOPSIS

  langertha_chat_openai Some request to the AI

=head1 DESCRIPTION

Requires OPENAI_API_KEY environment to be set.

